<header class="main-header glass-effect">
    <div class="header-content">
        <div class="header-left">
            <a href="/" class="logo-link">
                <img src="/images/logo.png" alt="Job Freelance Logo" class="header-logo">
                <span class="logo-text">Job Freelance</span>
            </a>
        </div>
        
        <!-- Wrapper baru untuk semua item navigasi -->
        <div class="nav-wrapper" id="navWrapper">
            <nav class="main-nav">
                <ul>
                    <li><a href="/jobs">Pekerjaan</a></li>
                    <li><a href="/freelancers">Freelancer</a></li>
                    <li><a href="/chat">Chat</a></li>
                </ul>
            </nav>
            <div class="header-right">
                <% if (currentUser) { %>
                    <!-- ... (notifikasi dan user menu tetap di sini) ... -->
                <% } else { %>
                    <a href="/auth/login" class="btn btn-secondary"><i class="fas fa-sign-in-alt"></i> Masuk</a>
                    <a href="/auth/register" class="btn btn-primary"><i class="fas fa-user-plus"></i> Daftar</a>
                <% } %>
            </div>
        </div>
        
        <button class="hamburger-menu" id="hamburgerMenu">
            <i class="fas fa-bars"></i>
        </button>
    </div>
</header>