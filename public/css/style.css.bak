/* =================================== */
/*  CHAT PAGE STYLES (KEREN & BARU)    */
/* =================================== */
.chat-container {
    display: flex;
    height: calc(100vh - 120px); /* Ketinggian penuh dikurangi padding/margin */
    padding: 0;
    flex-direction: column; /* Default untuk mobile */
}

/* Sidebar Daftar Percakapan */
.chat-sidebar {
    display: flex;
    flex-direction: column;
    border-right: 1px solid var(--glass-border);
    background: rgba(0, 0, 0, 0.1); /* Latar sedikit lebih gelap */
    overflow-y: auto;
}
.conversation-list { list-style: none; }
.conversation-item {
    display: flex; align-items: center; padding: 1rem;
    cursor: pointer; gap: 1rem; transition: background-color 0.2s ease;
    border-bottom: 1px solid var(--glass-border);
}
.conversation-item:hover { background-color: rgba(255, 255, 255, 0.05); }
.conversation-item.active { background-color: var(--tertiary-color); }
.conversation-info { overflow: hidden; }
.conversation-preview {
    font-size: 0.8rem; color: var(--secondary-color);
    white-space: nowrap; text-overflow: ellipsis; overflow: hidden;
}

/* Jendela Chat Utama */
.chat-main {
    display: flex;
    flex-direction: column;
    flex-grow: 1; /* Mengisi sisa ruang */
}
.chat-header {
    padding: 1rem 1.5rem; border-bottom: 1px solid var(--glass-border);
    display: flex; align-items: center; gap: 0.75rem;
    background: rgba(0, 0, 0, 0.2);
}
.chat-header h3 { font-weight: 500; }

/* Area Pesan */
.chat-messages {
    flex-grow: 1;
    padding: 1.5rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 0.25rem; /* Jarak kecil antar bubble */
}
.chat-placeholder {
    margin: auto; text-align: center; color: var(--secondary-color);
}
.chat-placeholder i { font-size: 4rem; margin-bottom: 1rem; }

/* Elemen Pesan Individual */
@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}
.chat-message {
    display: flex;
    align-items: flex-end;
    gap: 0.75rem;
    max-width: 75%;
    animation: fadeInUp 0.3s ease-out;
}
.message-content {
    display: flex;
    flex-direction: column;
}
.message-bubble {
    padding: 0.75rem 1rem;
    border-radius: var(--border-radius);
    line-height: 1.5;
    word-wrap: break-word;
}
.message-timestamp {
    font-size: 0.7rem;
    color: var(--secondary-color);
    margin-top: 0.25rem;
}

/* ==== INI BAGIAN KANAN-KIRI ==== */
/* Pesan Diterima (KIRI) */
.chat-message.received {
    align-self: flex-start;
}
.chat-message.received .message-bubble {
    background-color: var(--tertiary-color);
    border-bottom-left-radius: 4px;
}
.chat-message.received .message-timestamp {
    text-align: left;
    margin-left: 0.25rem;
}

/* Pesan Terkirim (KANAN) */
.chat-message.sent {
    align-self: flex-end;
    flex-direction: row-reverse; /* Balik urutan: bubble dulu, baru avatar */
}
.chat-message.sent .message-bubble {
    background-color: var(--primary-color);
    color: var(--background-dark);
    border-bottom-right-radius: 4px;
}
.chat-message.sent .message-timestamp {
    text-align: right;
    margin-right: 0.25rem;
}

/* Form Input Pesan */
.chat-input-form {
    padding: 1rem; display: flex;
    border-top: 1px solid var(--glass-border);
    background: rgba(0, 0, 0, 0.2);
}

/* Tata Letak untuk Desktop */
@media (min-width: 993px) {
    .chat-container {
        flex-direction: row; /* Kembali ke sampingan di desktop */
    }
    .chat-sidebar {
        flex-basis: 350px; /* Lebar tetap untuk sidebar */
        flex-shrink: 0;
    }
}

