/* =================================== */
/* Job List Page Specific Layout */
/* =================================== */
.main-content-container {
    padding: 1rem;
}

.page-header {
    margin-bottom: 1.5rem;
    padding: 1.5rem; /* Beri sedikit padding agar tidak terlalu mepet */
}

.job-list-container {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start; /* Jaga agar item atasnya sejajar */
}

.filters-sidebar {
    flex: 1; /* Ambil 1 bagian dari ruang */
    max-width: 350px; /* Batasi lebar maksimal di desktop */
    position: sticky; /* Tetap terlihat saat scroll di desktop */
    top: 90px; /* Jarak dari atas, sesuaikan dengan tinggi header */
}

.job-list-main {
    flex: 3; /* Ambil 3 bagian dari ruang, membuatnya lebih lebar */
}

.job-card {
    margin-bottom: 1.5rem;
}


/* =================================== */
/*      RESPONSIVE DESIGN (MOBILE)     */
/* =================================== */

/* Aturan untuk layar dengan lebar 992px atau kurang (Tablet & HP) */
@media (max-width: 992px) {

    /* Tata Letak Utama Dashboard */
    .dashboard-wrapper {
        flex-direction: column; /* Ubah dari sampingan menjadi atas-bawah */
    }

    .dashboard-sidebar {
        position: relative; /* Hapus 'fixed' position */
        width: 100%;
        min-height: auto; /* Tinggi menyesuaikan konten */
        border-bottom: 1px solid var(--glass-border);
    }

    .dashboard-main-content {
        margin-left: 0; /* Hapus margin kiri dari sidebar */
        width: 100%;
        padding: 1.5rem;
    }

    .grid-span-2 {
        grid-column: span 1; /* Buat semua card menjadi 1 kolom */
    }

    /* TATA LETAK HALAMAN /JOBS (SESUAI SCREENSHOT ANDA) */
    .job-list-container {
        flex-direction: column; /* Ubah dari sampingan menjadi atas-bawah */
    }

    .filters-sidebar {
        max-width: 100%; /* Lebar penuh */
        position: static; /* Hapus 'sticky' position di mobile */
    }
}

/* Aturan untuk layar dengan lebar 768px atau kurang (HP) */
@media (max-width: 768px) {
    /* Sembunyikan Navigasi di Header */
    .main-header {
        padding: 1rem 1.5rem;
    }
    
    .main-nav, .header-right .btn {
        display: none; /* Sembunyikan menu navigasi dan tombol login/register */
    }

    /* Tampilkan Hamburger Menu (perlu ditambahkan di EJS) */
    .hamburger-menu {
        display: block; /* Tampilkan ikon hamburger */
    }

    /* Perkecil font di HP */
    .hero-content h1 {
        font-size: 2.2rem;
    }
    .profile-info h2 {
        font-size: 2rem;
    }
}

/* CSS untuk Hamburger Menu (awalnya disembunyikan) */
.hamburger-menu {
    display: none;
    background: none;
    border: none;
    color: var(--text-light);
    font-size: 1.5rem;
    cursor: pointer;
    z-index: 1001;
}
