    margin-bottom: 2rem;
}
.hero-buttons {
    display: flex;
    gap: 1rem;
}
.btn-large {
    padding: 1rem 2rem;
    font-size: 1.1rem;
}
.hero-image-v2 {
    flex: 1;
    max-width: 500px;
}
.hero-image-v2 img {
    width: 100%;
    height: auto;
}

