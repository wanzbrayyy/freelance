.feature-section, .category-section {
    padding: 4rem 2rem;
}
.section-title {
    text-align: center;
    margin-bottom: 3rem;
}
.section-title h2 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
}
.section-title p {
    color: var(--secondary-color);
    max-width: 600px;
    margin: 0 auto;
}
.feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}
